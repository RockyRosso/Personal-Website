---

import SiteFooter from "../components/SiteFooter.vue";
import SiteHeader from "../components/SiteHeader.vue";
import Title from "../components/Title.vue"

import '../assets/styles/base.scss';

const { title, includemargin } = Astro.props;

---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width,height=device-height" />
		<meta name="generator" content={Astro.generator} />

		<meta name="description" content="A website to showcase projects made by me as well as (soon to be) blogs" />
		<meta name="author" content="Rocky Rosso" />
		<meta name="keywords" content="portfolio, rocky, rosso, web development, discord bots, fullstack" />

		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

        <script defer="true" src="https://code.jquery.com/jquery-3.7.1.min.js" />c
		
		<Title name={title} />
	</head>
	<body>
        <SiteHeader />

		<div style={includemargin ? 'margin-top: 200px' : ''}></div>

        <main>
			<div class="page-container">
				<slot />
			</div>
        </main>

		<SiteFooter />
	</body>
</html>

<script src="../assets/scripts/animate-scroll" />